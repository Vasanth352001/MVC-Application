@{
    ViewBag.Title = "Home Page";
}

<html>
<head>
    <title></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
          crossorigin="anonymous">
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <div class="card" style="border: none;">
        <div class="card-body">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="https://freedesignfile.com/upload/2017/11/Black-forest-cake-Stock-Photo-01.jpg" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="https://images.kitchenstories.io/recipeImages/RP04_20_06_BlackForestCakeInAGlass_TitlePicture/RP04_20_06_BlackForestCakeInAGlass_TitlePicture-large-landscape-150.jpg" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="https://c0.wallpaperflare.com/preview/689/343/770/black-forest-cherry-cake-cake-cherry-pie-cream-cake.jpg" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
    <div class="container">
        <h1 class="text-center" style="margin-top: 50px;">Featured Product</h1>
        <div class="row justify-content-around" style="margin-top:20px;">
            @if (ViewBag.Featured != null)
            {
                foreach (var cake in ViewBag.Featured)
                {
                    <div class="col-md-3 col-xs-4 justify-content-between" style="margin-top: 50px;">
                        @using (Html.BeginForm("SingleProduct", "Home"))
                        {
                            <select name="URL" style="display: none;"><option>@cake["URL"]</option></select>
                            <button class="btn btn-default">
                                <img src=@cake["URL"] class="img-responsive" style="width: 170px; height: 250px;" />
                            </button>
                            <div class="det">
                                <h3>@cake["Name"]</h3>
                            </div>
                            <div class="det">
                                <h4 class="text-danger">Rs.@cake["Price"]</h4>
                            </div>
                            <div class="det">
                                <h4 class="text-primary">@cake["Offer"]% Offer</h4>
                            </div>
                        }
                    </div>
                }
            }
        </div>
        <h1 class="text-center" style="margin-top: 50px;">Latest Product</h1>
        <div class="row justify-content-between" style="margin-top:20px;">
            @if (ViewBag.Latest != null)
            {
                foreach (var cake in ViewBag.Latest)
                {
                    <div class="col-md-3 col-xs-4 justify-content-between" style="margin-top: 50px;">
                        @using (Html.BeginForm("SingleProduct", "Home"))
                        {
                            <select name="URL" style="display: none;"><option>@cake["URL"]</option></select>
                            <button class="btn btn-default">
                                <img src=@cake["URL"] class="img-responsive" style="width: 170px; height: 250px;" />
                            </button>
                            <div class="det">
                                <h3>@cake["Name"]</h3>
                            </div>
                            <div class="det">
                                <h4 class="text-danger">Rs.@cake["Price"]</h4>
                            </div>
                            <div class="det">
                                <h4 class="text-primary">@cake["Offer"]% Offer</h4>
                            </div>
                        }
                    </div>
                }
            }
        </div>
        <h1 class="text-center" style="margin-top: 50px;">Offer Product</h1>
        <div class="card" style="margin-top: 50px; border: 2px solid black;">
            <div class="card-body">
                <div class="col-md-4 col-xs-6">
                    <img src=@ViewBag.OfferUrl class="img-responsive img-rounded" style="height: 300px;" />
                    <h1>@ViewBag.OfferName</h1>
                    <h3 class="text-danger">Rs.@ViewBag.OfferPrice</h3>
                </div>
                <div class="col-md-4 col-xs-6">
                    <label style="font-size: 150px; font-style: italic;color: goldenrod;">@ViewBag.OfferOffer%</label>
                </div>
                <div class="col-md-4 col-xs-6">
                    <br /><br />
                    <h2>Special Offer!!!</h2>
                    <hr class="bg-danger" /><br /><br />
                    <h4>
                        *Lorem can ipsum dolores sit amet, consectured vica elit, cased la diam nonummy nibano reet.
                    </h4>
                    <h4>
                        *Lorem can ipsum dolores sit amet consectured vica elit, cased la diam nonummy nibano reet.
                    </h4>
                    <h4>
                        *Lorem can ipsum dolores sit amet consectured vica elit, cased la diam nonummy nibano reet.
                    </h4>
                    <br />
                    @using (Html.BeginForm("SingleProduct", "Home"))
                    {
                        <select name="URL" style="display: none;"><option>@ViewBag.OfferUrl</option></select>
                        <button type="submit" class="btn btn-primary btn-lg">Buy Now</button>
                    }
                </div>
            </div>
        </div>


        <h1 class="text-center" style="margin-top: 50px;">About</h1>
        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-3 col-xs-6 footer-col">
                        <h4>Categories</h4>
                        <ul>
                            <li><a href="#">Wedding Cake</a></li>
                            <li><a href="#">Birthday Cake</a></li>
                            <li><a href="#">Anniversery Cake</a></li>
                            <li><a href="#">Pieace of Cake</a></li>
                            <li><a href="#">New Year Cake</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3 col-xs-6 footer-col">
                        <h4>Information</h4>
                        <ul>
                            <li><a href="#">About us</a></li>
                            <li><a href="#">Conatct us</a></li>
                            <li><a href="#">Terms & condition</a></li>
                            <li><a href="#">Shipping & Exchange</a></li>
                            <li><a href="#">Privacy Policy</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3 col-xs-6 footer-col">
                        <h4>Contact</h4>
                        <ul>
                            <li><a href="#">Address : XYZ Tirupur Tamilnady pincode 123456</a></li>
                            <hr>
                            <li><a href="#">Phone 9876543212</a></li>
                            <li><a href="#">Email yummycakes@gmail.com</a></li>
                            <li><a href="#"></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>