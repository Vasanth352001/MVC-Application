
@{
    ViewBag.Title = "CheckPaymentDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <title></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
          crossorigin="anonymous">
    <link href="~/Content/Paymentpage.css" rel="stylesheet" />
    <script src="~/Scripts/Javascript/Payment.js"></script>
</head>
<body>

    <div class="container" style="margin-top: 60px;">
        <div class="card" style="padding: 30px;">
            <div class="card-body">
                <h4 class="text-danger">Choose a payment option</h4>
                <!-- Button trigger modal -->
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#cash">
                    Pay on Delivery
                </button>

                <!-- Button trigger modal -->
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#card">
                    Card Payment
                </button>
            </div>
        </div>
    </div>

    <!-- Modal -->

    <div class="modal fade" id="card" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <form action="CheckPaymentDetails" method="post" onmouseover="Paymentvalidate()">
                        <h2>Card Information</h2>
                        <input type="text" class="inputbox" name="Name" id="name" placeholder="Holder Name" />
                        <label class="form-label" id="nameerror"></label>
                        <input type="number" class="inputbox" name="Cardnumber" id="card_number" placeholder="Card Number" />
                        <label class="form-label" id="errorcardnumber"></label>
                        <select class="inputbox" name="Cardtype" id="card_type">
                            <option>--Select a Card Type--</option>
                            <option>Visa</option>
                            <option>RuPay</option>
                            <option>MasterCard</option>
                        </select>
                        <label class="form-label" id="errortype"></label>
                        <input type="text" class="inputbox" name="CVV" id="cvvno" placeholder="CVV" />
                        <label class="form-label" id="errorcvv"></label>
                        <input type="month" value="Expire Date" id="expdate" name="Expdate" placeholder="Expiry Date" />
                        <label class="form-label" id="errordate"></label>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="cash" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalCenterTitle">Modal title</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form action="CashOnDelivery" method="post" style="font-size: 16px;">
                        <label class="form-label text-danger">**If you choose Cash On Delivery then click to submit!!!</label>
                        <button type="submit" class="btn btn-success btn-group-lg" style="float: right;">Order</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

