
@{
    ViewBag.Title = "AdminViewCustomers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AdminLogin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/Admin.css" />
    <script src="~/Scripts/LoginForm.js"></script>
</head>
<body>
    <br />
    <div class="card bg-dark text-white" style="margin-left: 280px; margin-right: 10px; border-radius: 10px 10px 0 0;">
        <div class="card-body">
            <h4 style="font-size:20px; font-weight: bold;">Customers</h4>
        </div>
    </div>
    <div class="card" style="margin-left:280px; margin-right:10px;">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">S.No</th>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Phonenumber</th>
                        <th scope="col">DOB</th>
                    </tr>
                </thead>
                <tbody style="font-size: 12px;">
                    @if (ViewBag.Customers != null)
                    {
                        int i = 1;
                        foreach (var customer in ViewBag.Customers)
                        {
                            <tr>
                                <th scope="row">@i</th>
                                <td>
                                    <form action="SpecificCustomerOrders" method="post">
                                        <select name="CustomerId" style="display: none;"><option>@customer["Id"]</option></select>
                                        <button type="submit" style="border: none; background: none; font-weight: bold; font-style: italic; color: red;">@customer["Id"]</button>
                                    </form>
                                </td>
                                <td>@customer["Name"]</td>
                                <td>@customer["Email"]</td>
                                <td>@customer["Phonenumber"]</td>
                                <td>@customer["DOB"].ToString("dd/MM/yyyy")</td>
                            </tr>
                            i++;
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>

