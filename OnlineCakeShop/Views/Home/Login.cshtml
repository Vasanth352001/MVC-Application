
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Login.css" rel="stylesheet" />
    <script src="~/Scripts/Javascript/Authendication.js"></script>
</head>
<body>
    <div class="bg-image">
        <div class="container cont">
            <div class="card bg-danger text-dark text-center" style="margin-top: 20px; font-weight: bold; font-size: 18px; letter-spacing: 1px;">
                <div class="card-body">
                    Login Form
                </div>
            </div>
            <div class="card layout bg-white" style="margin-top: 0px;" onmouseover="Loginvalidate()">
                <div class="card-body">
                    @using (Html.BeginForm("Login", "Home"))
                    {
                        <h5 style="font-weight: bold; font-style: italic; font-size: 14px;color: red;">@ViewBag.Loginerror</h5><br />
                        <div class="mb-5 input-group input-group-lg" id="Idval">
                            <input type="text" class="form-control" id="Id" name="Id" placeholder="Id">
                        </div>
                        <div class="mb-5 input-group input-group-lg" id="Passwordval">
                            <input type="password" class="form-control" id="Password" name="Password" placeholder="Password">
                        </div>
                        <div class="mb-5 input-group">
                            <button class="btn btn-primary" type="submit" disabled id="logbtn">Submit form</button>
                        </div>
                        <label for="basic-url" class="form-label text-danger">
                            **If you not Register @Html.ActionLink("Click", "Register", "Home") to Register
                        </label>
                    }
                    </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>