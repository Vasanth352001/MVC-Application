
@{
    ViewBag.Title = "CheckCakeDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <title></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
          crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/Singleproduct.css" type="text/css" />
</head>
<body>
    <div class="container" style="margin-top: 60px;">
        <div class="card p-5">
            <div class="card-body">
                <div class="col-md-4 col-xs-6">
                    <img src=@ViewBag.Url class="img-responsive img-rounded" style="width: 200px;height: 300px;" />
                </div>
                <div class="col-md-8 col-xs-6" style="font-size: 20px;">
                    <br />
                    <h2>@ViewBag.Name</h2>
                    <p>Rs.@ViewBag.Price</p>
                    <h5>Quantity of Cake is @ViewBag.Quantity</h5>
                    <br />
                    <form method="get">
                        <button type="submit" formaction="CheckPersonalDetails" class="btn btn-info btn-lg font-weight-bold font-italic" style="width: 150px;">Next</button>
                    </form><br />
                    <form method="post">
                        <select style="display: none;" name="URL"><option>@ViewBag.Url</option></select>
                        <button type="submit" formaction="SingleProduct" class="btn btn-success btn-lg font-weight-bold font-italic" style="width: 150px;">Back</button>
                    </form>
                    <label class="form-check-label text-danger" style="font-size: 14px; font-style: italic;" for="flexCheckDefault">
                        **Check the details.If all the details is ok for you click the next to go to personal details.
                    </label><br />
                </div>
            </div>
        </div>
    </div>
</body>
</html>


