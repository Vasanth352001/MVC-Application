
@{
    ViewBag.Title = "SingleProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <title></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
          crossorigin="anonymous">
    <link rel="stylesheet" href="~/Content/SingleProduct.css" type="text/css" />
</head>
<body>
    <div class="container" style="margin-top: 60px;">
        <div class="card p-5">
            <div class="card-body">
                <div class="col-md-4 col-xs-6">
                    <img src=@ViewBag.Url class="img-responsive img-rounded" style="width: 200px;height: 300px;" />
                </div>
                <div class="col-md-8 col-xs-6" style="font-size: 20px;">
                    <form method="post">
                        <h1>@ViewBag.Name</h1>
                        <h2 class="text-danger">@ViewBag.Offer%</h2>
                        <p>Rs.@ViewBag.Price</p>
                        <input type="number" style="width:40px;" value="1" name="Quantity" />
                        <label>Quantity</label><br /><br />
                        <select style="display: none;" name="URL"><option>@ViewBag.Url</option></select>
                        <button type="submit" formaction="CheckCakeDetails" class="btn btn-success btn-lg font-weight-bold font-italic">Buy a Cake</button>
                        <button type="submit" formaction="AddCart" class="btn btn-info btn-lg font-weight-bold font-italic" style="margin-left: 30px;">@ViewBag.BtnValue</button>
                        <br /><br />
                        <h3>Description</h3>
                        <p class="d-flex text-justify">
                            Lorem, ipsum dolor sit amet consectetur adipisicing elit.
                        </p>
                        <p class="text-success">@ViewBag.Stock is available</p>
                    </form>
                </div>
            </div>
        </div>

        
        <div class="wrapper">
            @foreach (var rel in ViewBag.RelatedProduct)
            {
                <div class="item">
                    @using (Html.BeginForm("SingleProduct", "Home"))
                    {
                        <select name="URL" style="display: none;"><option>@rel["URL"]</option></select>
                        <button class="btn btn-default" style="background: #ece5da;border:none;">
                            <img src=@rel["URL"] class="img-responsive" />
                        </button>
                        <h4>@rel["Name"]</h4>
                        <p>Rs.@rel["Price"]</p>
                    }
                </div>
            }
        </div>

        <h1 class="text-center" style="margin-top: 50px;">About</h1>
        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-md-3 col-xs-6 footer-col">
                        <h4>Categories</h4>
                        <ul>
                            <li><a href="#">Wedding Cake</a></li>
                            <li><a href="#">Birthday Cake</a></li>
                            <li><a href="#">Anniversery Cake</a></li>
                            <li><a href="#">Pieace of Cake</a></li>
                            <li><a href="#">New Year Cake</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3 col-xs-6 footer-col">
                        <h4>Information</h4>
                        <ul>
                            <li><a href="#">About us</a></li>
                            <li><a href="#">Conatct us</a></li>
                            <li><a href="#">Terms & condition</a></li>
                            <li><a href="#">Shipping & Exchange</a></li>
                            <li><a href="#">Privacy Policy</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3 col-xs-6 footer-col">
                        <h4>Contact</h4>
                        <ul>
                            <li><a href="#">Address : XYZ Tirupur Tamilnady pincode 123456</a></li>
                            <hr>
                            <li><a href="#">Phone 9876543212</a></li>
                            <li><a href="#">Email yummycakes@gmail.com</a></li>
                            <li><a href="#"></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>

