
@{
    ViewBag.Title = "Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <title></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
          crossorigin="anonymous">
    <link href="~/Content/Style.css" rel="stylesheet" />
</head>
<body class="bg-white">
    <div class="container" style="margin-top: 60px; ">
        <div class="card bg-light" style="width: 700px; height: 0px auto; margin-left: 210px;">
            <div class="card-header bg-dark">
                <img src="~/Content/Images/Account.png" class="img-responsive" />
            </div>
            <div class="card-body ml-5">
                <table class="table table-hover table-borderless">
                    <thead style="font-size: 16px;">
                        <tr>
                            <th scope="col">S.no</th>
                            <th scope="col">Details</th>
                            <th scope="col">Datas</th>
                        </tr>
                    </thead>
                    <tbody style="font-size: 14px;">
                        <tr>
                            <th scope="row">1</th>
                            <td>User Id</td>
                            <td>@ViewBag.UserId</td>
                        </tr>
                        <tr>
                            <th scope="row">2</th>
                            <td>Name</td>
                            <td>@ViewBag.UserName</td>
                        </tr>
                        <tr>
                            <th scope="row">3</th>
                            <td>Email</td>
                            <td>@ViewBag.UserEmail</td>
                        </tr>
                        <tr>
                            <th scope="row">4</th>
                            <td>Phone Number</td>
                            <td>@ViewBag.UserPhonenumber</td>
                        </tr>
                        <tr>
                            <th scope="row">5</th>
                            <td>Date Of Birth</td>
                            <td>@ViewBag.UserDOB</td>
                        </tr>
                        <tr>
                            <th scope="row">6</th>
                            <td>Cart Count</td>
                            <td>@ViewBag.UserCart</td>
                        </tr>
                        <tr>
                            <th scope="row">7</th>
                            <td>Order WIP</td>
                            <td>@ViewBag.UserWIPOrder</td>
                        </tr>
                        <tr>
                            <th scope="row">8</th>
                            <td>Order Success</td>
                            <td>@ViewBag.UserSuccessOrder</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
</body>
</html>

