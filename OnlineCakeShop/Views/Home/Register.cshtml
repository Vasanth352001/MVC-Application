
@{
    Layout = null;
} 

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/Login.css" rel="stylesheet" />
    <script src="~/Scripts/Javascript/Authendication.js"></script>
</head>
<body>
    <div class="bg-image">
        <div class="container cont">
            <div class="card bg-danger text-dark text-center" style="margin-top: 20px; font-weight: bold; font-size: 18px; letter-spacing: 1px;">
                <div class="card-body">
                    Register Form
                </div>
            </div>
            <div class="card layout bg-white" style="margin-top: 0px;" onmouseover="validate()">
                <div class="card-body">
                    <h5 class="text-danger" style="font-weight: bold; font-style: italic; font-size: 18px;">@ViewBag.Registererror</h5>
                    @using (Html.BeginForm("Gmail", "Home"))
                    {
                        <div class="row g-3">
                            <div class="col input-group input-group-lg">
                                <input type="text" id="name" name="Name" class="form-control" placeholder="Name(without space)" aria-label="First name">
                            </div>
                            <div class="col input-group input-group-lg">
                                <input type="text" id="email" name="Email" class="form-control" placeholder="Email" aria-label="Last name">
                            </div>
                        </div>
                        <div class="row g-3">
                            <div class="col">
                                <label id="errorname" class="error"></label><br />
                            </div>
                            <div class="col">
                                <label id="erroremail" class="error"></label>
                            </div>
                        </div>

                        <div class="row g-3">
                            <div class="col input-group input-group-lg" id="phoneval">
                                <input type="text" class="form-control" id="phone" name="Phonenumber" placeholder="Phonenumber">
                            </div>
                            <div class="col input-group input-group-lg" id="dobval">
                                <input type="date" class="form-control" id="dob" name="DOB" placeholder="Date of Birth">
                            </div>
                        </div>
                        <div class="row g-3">
                            <div class="col">
                                <label id="errorphonenumber" class="error"></label><br />
                            </div>
                            <div class="col">
                                <label id="errordob" class="error"></label><br />
                            </div>
                        </div>

                        <div class="mb-3 input-group input-group-lg">
                            <input type="password" class="form-control" id="pword" name="Password" placeholder="Password">
                        </div>
                        <label id="errorpassword" class="error"></label><br />
                        <div class="mb-3 input-group input-group-lg">
                            <input type="password" class="form-control" id="cpword" placeholder="Confirm Password">
                        </div>
                        <label id="errorconfirmpassword" class="error"></label><br />
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" value="" id="check" onclick="checkval()">
                            <label class="form-check-label text-primary" for="flexCheckDefault">
                                Verify Password
                            </label>
                        </div><br />
                        <div class="col-12">
                            <button class="btn btn-primary" type="submit" disabled id="regbtn">Submit form</button>
                        </div>
                        <label for="basic-url" class="form-label text-danger">
                            **If you Already Register @Html.ActionLink("Click", "Login", "Home") to Login
                        </label>
                    }
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
