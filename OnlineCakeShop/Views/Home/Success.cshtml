
@{
    ViewBag.Title = "Success";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>
    <title></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
          crossorigin="anonymous">
    <link href="~/Content/Paymentpage.css" rel="stylesheet" />
    <script src="~/Scripts/Javascript/Payment.js"></script>
    <style>
        .popup {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%,-50%);
            background: #fff;
            width: 450px;
            height: 300px;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.1),0 0 0 1000px rgba(255, 255, 255, 0.95);
            display: flex;
            justify-content: center;
            align-items: center;
            padding: 40px;
            display: none;
        }

            .popup.active {
                display: block;
            }

        #my-canvas {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100vh;
            z-index: 100000;
            display: none;
            pointer-events: none;
        }

            #my-canvas.active {
                display: block;
            }

        section .popup input[type="submit"] {
            margin-top: 0px auto;
            margin-left: 35%;
            width: 100px;
            height: 30px;
            background-color: green;
            color: white;
            font-family: monospace;
            font-style: italic;
            font-weight: bold;
            font-size: 20px;
        }

            section .popup input[type="submit"]:hover {
                background-color: lightcyan;
                color: red;
            }
    </style>
</head>
<body onload="success()">


    <section>
        <div class="popup" style="margin-top: 60px;">
            <h3>Success!!!</h3>
            <p>Your order successfully added.Tomorrow you received your order.If you continue to shopping click ok!!!</p>
            <p>Enjoy your shopping.Thank you for visit</p>
            <form method="get">
                <input type="submit" value="Ok" formaction="/home" class="close">
            </form>
        </div>
    </section>

    <canvas id="my-canvas"></canvas>

    <!-- Script Add-->

    <script src="~/Scripts/Index.min.js"></script>
    <script src="~/Scripts/jquery.min.js"></script>

</body>
</html>



